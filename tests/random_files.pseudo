TYPE EnumT = (State1, State2)
TYPE CompositeT
    DECLARE x : INTEGER
    DECLARE y : STRING
    DECLARE z : EnumT
ENDTYPE

DECLARE Int : INTEGER
DECLARE Real : REAL
DECLARE Bool : BOOLEAN
DECLARE Char : CHAR
DECLARE Str : STRING
DECLARE Date : DATE
DECLARE Enum : EnumT
DECLARE Comp : CompositeT

Int <- 99
Real <- 6.74
Bool <- TRUE
Char <- 'a'
Str <- "Hello world"
Date <- 24/2/2020
Enum <- State2
Comp.x <- 53
Comp.y <- "Hello\nworld"
Comp.z <- State1

CONSTANT FNAME = "random.dat"
OPENFILE FNAME FOR RANDOM

SEEK FNAME, 1
PUTRECORD FNAME, Int
SEEK FNAME, 2
PUTRECORD FNAME, Real
SEEK FNAME, 3
PUTRECORD FNAME, Bool
SEEK FNAME, 4
PUTRECORD FNAME, Char
SEEK FNAME, 5
PUTRECORD FNAME, Str
SEEK FNAME, 6
PUTRECORD FNAME, Date
SEEK FNAME, 7
PUTRECORD FNAME, Enum
SEEK FNAME, 8
PUTRECORD FNAME, Comp

CLOSEFILE FNAME

Int <- 0
Real <- 0.0
Bool <- FALSE
Char <- ' '
Str <- ""
Date <- 1/1/1111
Enum <- State1
Comp.x <- 0
Comp.y <- ""
Comp.z <- State2

OPENFILE FNAME FOR RANDOM

SEEK FNAME, 1
GETRECORD FNAME, Int
OUTPUT Int
SEEK FNAME, 2
GETRECORD FNAME, Real
OUTPUT Real
SEEK FNAME, 3
GETRECORD FNAME, Bool
OUTPUT Bool
SEEK FNAME, 4
GETRECORD FNAME, Char
OUTPUT Char
SEEK FNAME, 5
GETRECORD FNAME, Str
OUTPUT Str
SEEK FNAME, 6
GETRECORD FNAME, Date
OUTPUT Date
SEEK FNAME, 7
GETRECORD FNAME, Enum
OUTPUT Enum
SEEK FNAME, 8
GETRECORD FNAME, Comp
OUTPUT Comp.x, " ", Comp.y, " ", Comp.z

CLOSEFILE FNAME
